{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://yourdomain.dev/jgd/schema.json",
  "title": "JGD (JSON Generator Definition)",
  "type": "object",
  "properties": {
    "$format": { "const": "jgd/v1" },
    "version": { "type": "string" },
    "seed": { "type": "integer" },
    "defaultLocale": { "type": "string", "default": "EN" },

    "entities": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/Entity" }
    },

    "root": { "$ref": "#/$defs/Entity" }
  },

  "oneOf": [
    { "required": ["entities"], "not": { "required": ["root"] } },
    { "required": ["root"], "not": { "required": ["entities"] } }
  ],

  "$defs": {
    "Field": {
      "description": "A field specification. All strings are templates and may contain ${...} expressions for faker calls or field references.",
      "oneOf": [
        { "$ref": "#/$defs/Entity" },
        { "$ref": "#/$defs/Array" },
        { "$ref": "#/$defs/Number" },
        { "$ref": "#/$defs/Optional" },
        { "$ref": "#/$defs/Ref" },
        { "type": "string" },
        { "type": "integer" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" }
      ]
    },

    "Object": {
      "type": "object",
      "required": ["object"],
      "properties": {
        "object": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/Field" }
        }
      }
    },

    "Array": {
      "type": "object",
      "required": ["array"],
      "properties": {
        "array": {
          "type": "object",
          "required": ["of"],
          "properties": {
            "count": { "$ref": "#/$defs/Count" },
            "of": { "$ref": "#/$defs/Field" }
          }
        }
      }
    },

    "Number": {
      "type": "object",
      "required": ["number"],
      "properties": {
        "number": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" },
            "integer": { "type": "boolean" }
          },
          "required": ["min", "max"]
        }
      }
    },

    "Optional": {
      "type": "object",
      "required": ["optional"],
      "properties": {
        "optional": {
          "type": "object",
          "required": ["of"],
          "properties": {
            "of": { "$ref": "#/$defs/Field" },
            "prob": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },

    "Ref": {
      "type": "object",
      "required": ["ref"],
      "properties": {
        "ref": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+\\.[a-zA-Z0-9_./-]+$"
        }
      }
    },

    "Entity": {
      "type": "object",
      "required": ["fields"],
      "properties": {
        "seed": { "type": "integer" },
        "uniqueBy": { "type": "array", "items": { "type": "string" } },
        "fields": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/Field" }
        },
        "count": { "$ref": "#/$defs/Count" }
      }
    },

    "Count": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        {
          "type": "array",
          "items": [{ "type": "integer" }, { "type": "integer" }],
          "minItems": 2,
          "maxItems": 2
        }
      ]
    }
  },
  "additionalProperties": false
}
